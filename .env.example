# Database Configuration
# For development: Use SQLite
DATABASE_URL="file:./dev.db"

# For production: Use PostgreSQL (Vercel Postgres, Neon, Supabase, etc.)
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth Configuration
# Generate a secret key with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-in-production"

# Change this to your deployment URL in production
NEXTAUTH_URL="http://localhost:3000"

# Vercel Blob Storage (Optional - only needed for file uploads in production)
# Get this from Vercel Dashboard → Storage → Blob
# BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxxxxx"
